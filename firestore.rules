rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {

    // Auth helpers (Clerk-issued Firebase custom tokens)
    function isSignedIn() {
      return request.auth != null;
    }

    function hasRole(roles) {
      return isSignedIn() && request.auth.token.role in roles;
    }

    function isAdminOrStaff() { return hasRole(['staff', 'admin']); }
    function isJudge()        { return hasRole(['judge', 'staff', 'admin']); }

    /* ================= BOULDER (boulderComps) ================= */
    match /boulderComps/{compId} {
      allow read: if true;
      allow create, update, delete: if isAdminOrStaff();

      match /categories/{catId} {
        allow read: if true;
        allow write: if isAdminOrStaff();

        match /details/{detailId} {
          allow read: if true;
          allow write: if isAdminOrStaff();
        }

        match /routes/{routeId} {
          allow read: if true;
          allow write: if isAdminOrStaff();

          match /details/{detailId} {
            allow read: if true;
            allow write: if isAdminOrStaff();
          }
        }

        match /finalRoutes/{routeId} {
          allow read: if true;
          allow write: if isAdminOrStaff();

          match /details/{detailId} {
            allow read: if true;
            allow write: if isAdminOrStaff();
          }
        }

        match /qualificationRoutes/{routeId} {
          allow read: if true;
          allow write: if isAdminOrStaff();

          match /details/{detailId} {
            allow read: if true;
            allow write: if isAdminOrStaff();
          }
        }
      }

      match /athletes/{athleteId} {
        allow read: if true;
        allow write: if isAdminOrStaff();
      }

      match /attempts/{attemptId} {
        // Reads are public for now to support live leaderboards; tighten if needed.
        allow read: if true;

        // Writes restricted to authenticated judges/staff/admin using token role claims.
        allow create, update: if isJudge()
                              && request.resource.data.compId == compId
                              && request.resource.data.symbol in ['1','Z','T'];
        allow delete: if isAdminOrStaff();
      }
    }

    /* ================= COMPETITIONS (new structure) ================= */
    match /competitions/{compId} {
      allow read: if true;
      allow create, update, delete: if isAdminOrStaff();

      match /categories/{catId} {
        allow read: if true;
        allow write: if isAdminOrStaff();

        match /qualificationRoutes/{routeId} {
          allow read: if true;
          allow write: if isAdminOrStaff();

          match /details/{detailId} {
            allow read: if true;
            allow write: if isAdminOrStaff();
          }
        }

        match /finalRoutes/{routeId} {
          allow read: if true;
          allow write: if isAdminOrStaff();

          match /details/{detailId} {
            allow read: if true;
            allow write: if isAdminOrStaff();
          }
        }
      }

      match /athletes/{athleteId} {
        allow read: if true;
        allow write: if isAdminOrStaff();
      }

      match /attempts/{attemptId} {
        // Reads are public for now to support live leaderboards; tighten if needed.
        allow read: if true;

        // Writes restricted to authenticated judges/staff/admin using token role claims.
        allow create, update: if isJudge()
                              && request.resource.data.compId == compId
                              && request.resource.data.symbol in ['1','Z','T'];
        allow delete: if isAdminOrStaff();
      }
    }

    /* ================= ROLES ================= */
    match /roles/{uid} {
      allow read: if isSignedIn() &&
                   (request.auth.uid == uid || hasRole(['admin']));
      allow write: if hasRole(['admin']);
    }

    /* Catch-all deny */
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
